@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Areas/Identity/Pages/_LoginLayout.cshtml";
}

<div class="d-flex justify-content-center row">
    <div class="col-md-8 col-lg-8">
        <div class="login-box">
            <div class="login-form">
                <h2>Login</h2>
                <p>SigIn to your Account</p>
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                    {
                        <div class="alert alert-success" role="alert">
                            @Model.SuccessMessage
                        </div>
                    }
                    <div class="form-group">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user-circle"></i></span>
                            </div>
                            <input asp-for="Input.Email" placeholder="E-mail" class="form-control" autocomplete="username" aria-required="true" />

                        </div>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                            </div>
                            <input asp-for="Input.Password" class="form-control" placeholder="Password" autocomplete="current-password" aria-required="true" />
                        </div>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" asp-for="Input.RememberMe" />

                            <label class="form-check-label" asp-for="Input.RememberMe">
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <input id="login-submit" type="submit" class="btn col-md-12" value="Log in" />
                        <div class="mt-1">
                            Don't have an account?
                            <a class="link-dark" style="color:#white;" asp-area="Identity" asp-page="/Account/EmployeeSignup" title="Resgiter Account">Register Now!</a>
                        </div>
                    </div>
                </form>
                <p style="text-align:center;">
                    <a class="text-light" asp-area="Identity" asp-page="/Account/LoginUsingPincode" title="Login Using Pincode">Login using Pincode</a>
                    <br />
                    <a class="text-light" asp-area="Identity" asp-page="/Account/ForgotPassword" title="Forgot Password">Forgot Password</a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
