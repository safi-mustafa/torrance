@page
@model EmployeeSignupModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Areas/Identity/Pages/_LoginLayout.cshtml";
}
<link href="~/css/icons/icomoon/styles.min.css" rel="stylesheet" type="text/css">
<link rel="stylesheet" href="~/css/all.css" />
<script src="~/js/select2/select2.min.js"></script>
<style>
    .select2-results ul {
        color: #000;
    }
</style>
<div class="d-flex justify-content-center row">
    <div class="col-md-4">
        <div class="login-box">
            <div class="login-form">
                <h2>Signup</h2>
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="mb-3">
                                <partial name="~/Views/Shared/Select2/_Company.cshtml" for="Input.Company" />
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="mb-3">
                                <label asp-for="Input.FullName" class="form-label fw-600"></label>
                                <input asp-for="Input.FullName" type="text" class="form-control" placeholder="Full Name" />
                                <span asp-validation-for="Input.FullName" class="validation-invalid-label"></span>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="mb-3">
                                <label asp-for="Input.Email" class="form-label fw-600"></label>
                                <input asp-for="Input.Email" type="text" class="form-control" placeholder="Email" />
                                <span asp-validation-for="Input.Email" class="validation-invalid-label"></span>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="mb-3">
                                <label asp-for="Input.AccessCode" class="form-label fw-600"></label>
                                <input asp-for="Input.AccessCode" type="number" class="form-control" maxlength="4" placeholder="xxxx" />
                                <span asp-validation-for="Input.AccessCode" class="validation-invalid-label"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group row">
                        <input type="submit" class="btn col-md-12" value="Submit" />
                    </div>
                </form>
                <p style="text-align:center;">
                    <a class="text-dark" asp-area="Identity" asp-page="/Account/Login" title="Login Page">Back to Login</a>
                </p>
            </div>
        </div>
    </div>
</div>
