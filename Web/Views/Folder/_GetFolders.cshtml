@using ViewModels.Shared
@model List<FolderDetailViewModel>
@{
    Layout = null;
}

@if (Model != null)
{
    @foreach (var item in Model)
    {
        <div class="col-lg-3 doc-col col-6 mb-3" attr-id="@item.Id">
            <div class="doc-inner">
                <div class="row">
                    <i class="fa-solid fa-pen edit-folder ml-3 mt-2" onclick="loadUpdateAndDetailModalPanel('/Folder/Update/@item.Id')" attr-id="@item.Id"></i>
                    <i class="fa-solid fa-trash delete-folder delete ml-2 mt-2" href='@("/Folder/Delete/"+item.Id)' attr-id="@item.Id"></i>
                </div>
                <a class="doc-setting" href="#"><img src="~/img/dots.png" alt="dots" /></a>
                <a href="#" class="doc-body folder" attr-id="@item.Id">
                    <img src="@item.IconUrl" class="doc-icon" alt="folder" />
                    <h4 class="doc-title folder-name">@item.Name</h4>
                    <p class="doc-item-count">@item.AttachmentCount items</p>
                </a>
            </div>
        </div>
    }
}
else
{
    <div class="row">
        <h3>No Folders found.</h3>
    </div>
}