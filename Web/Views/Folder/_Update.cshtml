@using ViewModels.Shared;
@model FolderModifyViewModel
@{
    Layout = null;
}
<div class="row">
    <div class="col-lg-12">
        <div class="row">
            <div class="col-lg-6">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-600"></label>
                    <input asp-for="Name" type="text" class="form-control" placeholder="Name" />
                    <span asp-validation-for="Name" class="validation-invalid-label"></span>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="mb-3">
                    <label asp-for="File" class="form-label fw-600"></label>
                    <input asp-for="File" name="File" type="file" class="form-control" placeholder="Name" />
                    <span asp-validation-for="File" class="validation-invalid-label"></span>
                </div>
            </div>
        </div>
    </div>
</div>

<input type="hidden" asp-for="Id" />