<div class="d-flex justify-content-center mt-3 mb-3">
    <ul class="pagination">
        @if (Model.CurrentPage != 1)
        {
            <li class="page-item"><a href="#" data-page="@(Model.CurrentPage-1)" class="page-link"><i class="icon-arrow-left12"></i></a></li>
        }
        @for (var i = 1; i <= Model.LastPage; i++)
        {
            <li class="page-item @(i==Model.CurrentPage?"current":"")"><a href="#" data-page="@i" class="page-link">@i</a></li>
        }
        @if (Model.CurrentPage != Model.LastPage)
        {
            <li class="page-item"><a href="#" data-page="@(Model.CurrentPage+1)" class="page-link"><i class="icon-arrow-right13"></i></a></li>
        }
    </ul>
</div>