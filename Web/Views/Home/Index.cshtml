@using ViewModels.Dashboard;
@model DashboardViewModel
@{
    ViewData["Title"] = "Home Page";
}
<style>
    *[class^='progress-done-'] {
        height: 100%;
        width: 0;
        opacity: 0;
        background: linear-gradient(to left, #f2709c,#ff9472);
        color: #fff;
        border-radius: 8px;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #fac090;
        box-shadow: 0 3px 3px -5px #f2709c, 0 2px 5px #f2709c;
        transition: 1s ease;
    }
</style>
<div class="container-fluid">
    <main>
        <div id="progress-charts-container" class="row">
        </div>
        <h3 class="default-heading">
            Torrance Admin Dashboard
        </h3>
        <br>
        <div class="row dashboard-stats-row">
            <div class="col-md-4">
                <div class="card w-100">
                    <div class="card-body">
                        <div class="content">
                            <h5 class="card-title"> Total TOTs</h5>
                            <p class="card-text">0</p>
                        </div>

                        <div class="icon">
                            <span class="tot"><i class="bi bi-people"></i></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card w-100">
                    <div class="card-body">
                        <div class="content">
                            <h5 class="card-title"> Total WWRs</h5>
                            <p class="card-text">0</p>
                        </div>

                        <div class="icon">
                            <span class="wwr">
                                <i class="bi bi-box"></i>
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card w-100">
                    <div class="card-body">
                        <div class="content">
                            <h5 class="card-title">Total Overrides</h5>
                            <p class="card-text">0</p>
                        </div>

                        <div class="icon">
                            <span class="tos"><i class="bi bi-currency-dollar"></i></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row dashboard-filters-row">
            <div class="col-md-12">
                <p>Filter By:</p>
                <div class="filter-select">
                    <select class="form-control form-select form-select-lg mb-3" aria-label=".form-select-lg example">
                        <option selected>Select Departments</option>
                        <option value="1">One</option>
                        <option value="2">Two</option>
                        <option value="3">Three</option>
                    </select>
                    <select class="form-control form-select form-select-lg mb-3" aria-label=".form-select-lg example">
                        <option selected>Select Units</option>
                        <option value="1">One</option>
                        <option value="2">Two</option>
                        <option value="3">Three</option>
                    </select>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            SHIFT DELAYS
                        </h5>
                        <p class="card-text">

                        </p>
                      
                    </div>
                </div>
            </div>
             <div class="col-sm-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            START OF WORK
                        </h5>
                        <p class="card-text">

                        </p>
                      
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            REWORK DELAYS
                        </h5>
                        <p class="card-text">

                        </p>

                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

