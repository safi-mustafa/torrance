        </div>
    </div>
    <div class="col-lg-4">
        <div class="mb-3">
            <partial name="~/Views/Shared/Select2/_Approver.cshtml" for="BusinessTeamLeader" view-data='@new ViewDataDictionary(ViewData) { { "IsSearchForm", "true" }, { "LogType", "FCO" }, {"UserTitle","Business Team Leader"}, {"Id", "business-team-leader"} }' />
