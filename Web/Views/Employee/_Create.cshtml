@using Newtonsoft.Json
@using Microsoft.AspNetCore.Http
@using Helpers
@using ViewModels
@using Enums
@using ViewModels.WeldingRodRecord.Employee;
@using Web.Extensions
@model EmployeeModifyViewModel
@{
    var isAdmin = User.IsInRole("Admin") ? "True" : "False";
    Layout = null;
}

    <div class="row">
        <div class="col-lg-6">
            <div class="mb-3">
                <label asp-for="FirstName" class="form-label fw-600"></label>
                <input asp-for="FirstName" type="text" class="form-control" placeholder="First Name" />
