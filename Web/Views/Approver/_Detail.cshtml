@using ViewModels.Authentication.Approver;
@model ApproverDetailViewModel
@{
    Layout = null;
}

<div class="row">
    <div class="col-lg-12">
        <div class="row">
            <div class="col-lg-6">
                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-600"></label>
                    <div>@(string.IsNullOrEmpty(Model.Email) ? "-" : Model.Email)</div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="mb-3">
                    <label asp-for="UserName" class="form-label fw-600"></label>
                    <div>@Model.UserName</div>
                </div>
            </div>
        </div>
        <div class="row">
             <div class="col-lg-6">
                <div class="mb-3">
                    <label asp-for="Units" class="form-label fw-600"></label>
                    <div>@Model.FormattedUnits</div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="mb-3">
                    <label asp-for="AccessCode" class="form-label fw-600"></label>
                    <div>@Model.AccessCode</div>
                </div>
            </div>
           
        </div>
    </div>
</div>

